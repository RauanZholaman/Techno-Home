@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<div class="login-wrapper">
    <div>
        <div class="login-box">
            <h5 class="aut-title">Login into your account</h5>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group">
                    <input placeholder="Login" name="username" class="form-control-aut" required/>
                </div>

                <div class="form-group mt-2">
                    <input placeholder="Password" name="password" type="password" class="form-control-aut" required/>
                </div>
                <div class="d-grid gap-2 col-12 mx-auto">
                    <button type="submit" class="btn btn-dark mt-4">Login</button>
                </div>
                <div class="d-grid gap-2 col-12 mx-auto mt-1">
                    <a type="submit" class="btn btn-dark mt-4" asp-controller="Account" asp-action="ResetPassword">Reset Password</a>
                </div>
            </form>
        </div>
        <div class="login-box mt-2">
            <h5 class="aut-new-title">New here?</h5>
            <div class="d-grid gap-2 col-12 mx-auto mt-1">
                <a type="submit" class="btn btn-dark mt-2" asp-controller="Account" asp-action="Register">Sign Up</a>
            </div>
        </div>
    </div>
</div>

    
