@model Techno_Home.Models.ProductFilter
@{
    ViewData["Name"] = "Catalog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding-top: 70px; padding-bottom: 70px">
    <h2 class="text-center" >Catalog</h2>
    <div class="row justify-content-end" style="margin-bottom: 10px">
        <div class="col-2 row-3">
            <form class="d-flex" >
                <input class="form-control me-2 rounded-0" type="search" placeholder="Search"/>
                <button class="btn btn-outline-success rounded-0" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="row d-flex align-items-start"> <!-- THE ENTIRE GRID INCLUDES FILTER SIDEBAR AND CARDS -->
        <div class="col-lg-3">
            <div class="card rounded-0 filter-card">
                <div class="card-body" style="padding: 40px">
                    <div class="filter-section">
                        <h5>Filter</h5>
                        <div style="padding-top: 20px">
                            <h6>Type:</h6>
                            <form method="get" asp-action="Catalog">
                                <div class="checkbox-grid">
                                    @foreach (var type in Model.Alltypes)
                                    {
                                        <div class="checkbox-item-underline">
                                            <input type="checkbox" name="type" value="@type" id="type_@type"/>
                                            <label for="type_@type">@type</label>
                                        </div>
                                    }    
                                </div>
                                <h6>Brand:</h6>
                                <div class="checkbox-grid">
                                    @foreach (var brand in Model.AllBrands)
                                    {
                                        <div class="checkbox-item-underline">
                                            <input type="checkbox" name="brand" value="@brand" id="brand_@brand"/>
                                            <label for="brand_@brand">@brand</label>
                                        </div>
                                    }
                                </div>


                                <h6>Price:</h6>
                                <div class="price-inputs-horizontal input">
                                    <input type="number" name="minPrice" step="0.01" placeholder="Min Price"/>
                                    <input type="number" name="maxPrice" step="0.01" placeholder="Max Price"/>
                                </div>

                                <div class="filter-buttons">
                                    <button type="submit">Filter</button>
                                    <button asp-controller="Home" asp-action="Catalog">Reset</button>
                                </div>

                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-xl-3 gx-3 gy-3">
                @foreach (var item in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100 rounded-0">
                            <div class="card-img-container">
                                <img class="card-img-top product-image" src="~/images/products/@item.ImagePath" alt="@item.Name"/>
                            </div>
                            <div class="card-body">
                                <h4 class="card-Name">@item.Name</h4>
                                <div class="d-flex justify-content-between align-items-center img-fluid" style="margin-top: 14%">
                                    <h4 class="card-Name">S$@item.Price</h4>
                                    <a href="#" class="btn btn-primary" style="background-color: black; border-color: black;">Add to Card</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

