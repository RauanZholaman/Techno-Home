@model IEnumerable<Techno_Home.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*This page is subject to removal*@

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @* <th>  Highly likely not required - Subject to removal *@
            @*     @Html.DisplayNameFor(model => model.ImageFileName) *@
            @* </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Price)  *@
                S$@item.Price.ToString("N2")
            </td>
            @* <td>  Highly Likely will not be needed - Subject to removal *@
            @*     @Html.DisplayFor(modelItem => item.ImageFileName) *@
            @* </td> *@
            <td>
                <img src="~/images/products/@item.ImageFileName" alt="@item.Title" style="max-width: 150px;"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
